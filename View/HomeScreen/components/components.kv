<DisplayContentData>:
    md_bg_color:0,.4,1,.05
    orientation: 'vertical'
    padding: ('7dp', '7dp', '7dp', '7dp')
    spacing: '18dp'
    adaptive_height:True
    radius:[15]

    MDBoxLayout:
        adaptive_height:True
        size_hint_x:1

        MDAnchorLayout:
            anchor_x:"left"
            padding: ('9dp', '9dp', '9dp', '9dp')
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x:1
                spacing: '19dp'

                CustomLabel:
                    id:city_name
                    font_name: app.basic_bold_font
                    height:self.texture_size[1]
                    text:"Chicago"
                    font_size:"27sp"

                CustomLabel:
                    id:city_temp
                    text:f"25\xb0 C\nMostly Sunny"
                    height:self.texture_size[1]
                    font_size:"21sp"

        MDAnchorLayout:
            anchor_x:"right"
            padding: ('9dp', '9dp', '9dp', '9dp')
            MDBoxLayout:
                orientation:'vertical'
                adaptive_size:True

                StyledIconButton:
                    icon:'weather-sunny'
                    icon_size:"85sp"
                    icon_color:app.theme_cls.accent_dark
                    _no_ripple_effect:True

    MDSeparator:

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height:True
        padding: ('11dp', '1dp', '11dp', '11dp')
        spacing: '10dp'

        CustomLabel:
            text:f"AQI: Good"
            adaptive_height:True

        MDSeparator:
        MDList:
            md_bg_color:app.theme_cls.primary_light
            radius:[15]
            spacing: '10dp'
            padding: ('4dp', '4dp', '4dp', '4dp')
            Item:
                icon:"air-humidifier"
                text:f"Humidity : 73"
            Item:
                icon:"weather-windy"
                text:f"Wind : 15kph"
            Item:
                icon:"weather-sunny"
                text:f"UV Index : low"
            Item:
                icon:"eye"
                text:f"Visibility : Unlimited"
            Item:
                icon:"arrow-collapse-down"
                text:f"Pressure : 995.9 mb"

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height:True

        CustomLabel:
            text: 'Other Features are under development.'
