<DisplayContentData>:
    md_bg_color:0,.4,1,.05
    orientation: 'vertical'
    padding: ('7dp', '7dp', '7dp', '7dp')
    spacing: '4dp'
    adaptive_height:True
    radius:[19]

    MDBoxLayout:
        adaptive_height:True
		padding: ('9dp', '9dp', '9dp', '9dp')
		MDBoxLayout:
			orientation: 'vertical'
			adaptive_height:True
			spacing: '19dp'

			CustomLabel:
				id:city_name
				font_name: app.basic_bold_font
				adaptive_height:True
				text:"Chicago"
				font_size:"27sp"

			CustomLabel:
				id:city_temp
				text:f"25\xb0 C\nMostly Sunny"
				adaptive_height:True
                font_size:"21sp"

        MDAnchorLayout:
            anchor_x:"right"
            padding: ('9dp', '9dp', '9dp', '9dp')
            MDBoxLayout:
                orientation:'vertical'
                adaptive_size:True

                StyledIconButton:
                    icon:'weather-sunny'
                    icon_size:"85sp"
                    icon_color:app.theme_cls.accent_dark
                    _no_ripple_effect:True

    MDSeparator:

    MDBoxLayout:
        orientation: 'vertical'
		padding: ('9dp', '9dp', '9dp', '9dp')
        adaptive_height:True
        spacing: '9dp'

        CustomLabel:
            text:f"AQI: Good"
            adaptive_height:True

        MDSeparator:
        MDList:
            md_bg_color:app.theme_cls.primary_light
            radius:[19]
            spacing: '10dp'
            padding: ('4dp', '4dp', '4dp', '4dp')
            Item:
                icon:"water-percent"
                text:f"Humidity : 73"
            Item:
                icon:"weather-windy"
                text:f"Wind : 15kph"
            Item:
                icon:"weather-sunny"
                text:f"UV Index : low"
            Item:
                icon:"eye"
                text:f"Visibility : Unlimited"
            Item:
                icon:"arrow-collapse"
                text:f"Pressure : 995.9 mb"
	MDSeparator:
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height:True

        CustomLabel:
            text: 'Other Features are under development.'
			
	MDBoxLayout:
		adaptive_height:True

<Item>:
    theme_text_color:"Custom"
    text_color:app.theme_cls.primary_dark
    ripple_color:app.theme_cls.primary_light
    radius:[19]
    IconLeftWidget:
        icon: root.icon
        theme_icon_color: "Custom"
        icon_color:app.theme_cls.primary_dark
