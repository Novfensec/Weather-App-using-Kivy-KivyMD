<HomeScreenView>:
    id:home_screen
    MDNavigationLayout:
        MDScreenManager:
            id:base_screen_manager
            MDScreen:
                MDRecycleView:
                    MDStackLayout:
                        size_hint: 1, 1
                        padding: ('4dp', '4dp', '4dp', '1dp')

                        MDBoxLayout:
                            size_hint_x:1
                            adaptive_height:True

                            StyledIconButton:
                                icon: "menu"
                                on_press:nav_drawer.set_state("open")

                            CustomLabel:
                                text: "nfsWeather"
                                color:app.theme_cls.primary_dark

                            MDBoxLayout:
                                AnchorLayout:
                                    anchor_x:"right"
                                    MDGridLayout:
                                        rows:1
                                        adaptive_size:True
                                        StyledIconButton:
                                            icon: "reload"
                                            ripple_color:app.theme_cls.primary_color
                                            on_release:
                                                app.update_context_data(['delhi'])

                                        StyledIconButton:
                                            icon: "plus"
                                            on_press:
                                                app.manager_screens.current="weather profiles screen"

                                        StyledIconButton:
                                            icon: "cog"
                                            on_press:
                                                app.manager_screens.current="settings screen"
                        MDSeparator:
                        MDBoxLayout:
                            orientation: 'vertical'
                            Widget:
                                size_hint_y:None
                                height:"9dp"
                            MDScrollView:
                                MDBoxLayout:
                                    orientation:"vertical"
                                    adaptive_height:True
                                    padding:"7dp","7dp","7dp","7dp"
                                    DisplayContentData:

                            Widget:
                                size_hint_y:None
                                height:"9dp"

        BaseNavigationDrawer:
            id: nav_drawer
            width: "240dp"
            padding:0
            md_bg_color:1,1,1,0
            BaseNavigationLayout:
                radius: (0, 16, 16, 0)
                md_bg_color:1,1,1,.9
                size_hint:1,1
                padding: ('7dp', '7dp', '7dp', '7dp')
                orientation:"vertical"

#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ExtendedButton>:
    elevation: 3.5
    shadow_radius: 12
    shadow_softness: 4
    height: "36dp"
    text_color:app.theme_cls.primary_dark
    icon_color:self.text_color
    md_bg_color:app.theme_cls.accent_light
    ripple_color:self.md_bg_color

<DrawerClickableItem@MDNavigationDrawerItem>:
    icon:"map-marker"
    focus_color: app.theme_cls.accent_light
    unfocus_color: self.parent.md_bg_color
    selected_color:app.theme_cls.primary_dark
    text_color:"black"
    ripple_color:app.theme_cls.accent_light

<BaseNavigationLayout>:
    MDBoxLayout:
        adaptive_height:True
        orientation:"vertical"
        padding: ('4dp', '4dp', '4dp', '8dp')
        spacing: '11dp'

        MDAnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            size_hint_y:None
            height:avatar.height

            FitImage:
                id: avatar
                source: "assets/images/favicon.png"
                size_hint: None,None
                size: '65dp','65dp'
                radius:[9]
        Widget:

        CustomLabel:
            font_style:"Body1"
            text: 'Novfensec Inc.'
            color: app.theme_cls.primary_dark

        Widget:

    MDSeparator:

    MDBoxLayout:
        orientation: "vertical"
        padding: ('9dp', '9dp', '9dp', '9dp')
        adaptive_height: True
        CustomLabel:
            text: 'Saved Locations'
            font_name:app.basic_font
            adaptive_height:True
            font_size:"26sp"
            color:app.theme_cls.primary_color

    MDSeparator:

    MDNavigationDrawerMenu:
        id:navigation_drawer_menu

        DrawerClickableItem:
            text:"Delhi"

        DrawerClickableItem:
            text:"New York"

        DrawerClickableItem:
            text:"Moscow"

    MDBoxLayout:
        adaptive_height:True

        MDFillRoundFlatIconButton:
            icon:"copyright"
            text:"Novfensec Inc."
            md_bg_color: app.theme_cls.accent_light
            text_color:app.theme_cls.primary_dark
            icon_color:self.text_color
            ripple_color:self.md_bg_color
