<HomeScreenView>:
    id:home_screen
    MDStackLayout:
        size_hint: 1, 1
        padding: ('4dp', '1dp', '4dp', '1dp')

        MDBoxLayout:
            size_hint_x:1
            adaptive_height:True

            MDIconButton:
                icon: "menu"
                theme_icon_color:"Custom"
                icon_color:app.theme_cls.primary_dark
                icon_size:"25sp"
                on_press:nav_drawer.set_state("open")

            MDLabel:
                font_style:"H6"
                text: "nfsWeather"
                color:app.theme_cls.primary_dark

        MDBoxLayout:
            MDScrollView:
                MDGridLayout:
                    padding: ('5dp', '5dp', '5dp', '5dp')
                    spacing:5
                    size_hint_x:1
                    size_hint_y:None
                    cols:1

                    WeatherCard:
                        text: "New York"

    BaseNavigationDrawer:
        id: nav_drawer

#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ExtendedButton>:
    elevation: 3.5
    shadow_radius: 12
    shadow_softness: 4
    -height: "36dp"

<DrawerClickableItem@MDNavigationDrawerItem>:
    focus_color: "#e7e4c0"
    unfocus_color: "#fffcf4"

<BaseNavigationDrawer>:
    radius: (0, 16, 16, 0)
    md_bg_color: app.theme_cls.primary_light
    elevation: 4
    width: "240dp"
    MDBoxLayout:
        size_hint:1,1
        orientation:"vertical"
        MDBoxLayout:
            adaptive_height:True
            orientation:"vertical"
            padding: ('11dp', '11dp', '11dp', '11dp')
            spacing: '19dp'

            MDAnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                size_hint_y:None
                height:avatar.height

                FitImage:
                    id: avatar
                    source: "assets/images/favicon.png"
                    size_hint: None,None
                    size: '75dp','75dp'
                    radius:[15]
            Widget:

            MDLabel:
                font_style:"Body1"
                text: 'Novfensec Inc.'
                color: app.theme_cls.primary_dark

            Widget:

        MDSeparator:
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            spacing: "12dp"
            padding: "3dp","8dp" , 0, "12dp"

            ExtendedButton:
                text: "Add Profile"
                icon: "plus"
                md_bg_color:app.theme_cls.primary_dark
        
        MDSeparator:

        MDNavigationDrawerMenu:
            id:navigation_drawer_menu
            MDGridLayout:
                cols:1
                adaptive_height:True

                OneLineIconListItem:
                    text: 'Weather Profiles'
                    multiline:True

                    IconLeftWidget:
                        icon: "weather-windy-variant"

<WeatherCard>
    padding: 4
    size_hint: 1, None
    md_bg_color:app.theme_cls.primary_light
    size: "200dp", "100dp"
    elevation:1.75
    ripple_behavior:True

    MDRelativeLayout:

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}

        MDLabel:
            id: weather_label
            adaptive_size: True
            color: app.theme_cls.primary_dark
            text: root.text
            pos: "12dp", "12dp"
            bold: True