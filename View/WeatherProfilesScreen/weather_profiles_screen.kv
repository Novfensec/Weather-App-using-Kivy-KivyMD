<WeatherProfilesScreenView>:
    id:weather_profiles_screen
    MDStackLayout:
        size_hint: 1, 1
        padding: ('4dp', '1dp', '4dp', '1dp')

        MDBoxLayout:
            size_hint_x:1
            adaptive_height:True

            StyledIconButton:
                icon: "arrow-left"
                on_press:
                    app.manager_screens.current="home screen"

            CustomLabel:
                text: "Search Different Cities"
                color:app.theme_cls.primary_dark
        MDSeparator:
        MDBoxLayout:
            orientation: 'vertical'
            padding: ('9dp', '1dp', '9dp', '1dp')
            adaptive_height:True
            MDTextField:
                hint_text:"Seach Cities"
                size_hint:1,None

        MDBoxLayout:
            MDScrollView:
                MDGridLayout:
                    padding: ('5dp', '5dp', '5dp', '5dp')
                    spacing:5
                    size_hint_x:1
                    size_hint_y:None
                    cols:1

                    WeatherCard:
                        text: 'Loaction 1'

<WeatherCard>:
    md_bg_color:0,.4,1,.05
    orientation: 'vertical'
    padding: ('7dp', '7dp', '7dp', '7dp')
    spacing: '4dp'
    adaptive_height:True
    radius:[19]

    MDBoxLayout:
		padding: ('9dp', '9dp', '9dp', '9dp')
        adaptive_height:True
		MDBoxLayout:
			orientation: 'vertical'
			adaptive_height:True
			spacing: '19dp'

			CustomLabel:
				id:city_name
				font_name: app.basic_bold_font
				adaptive_height:True
				text:"Chicago"
				font_size:"27sp"

			CustomLabel:
				id:city_temp
				text:f"25\xb0 C\nMostly Sunny"
				adaptive_height:True
                font_size:"21sp"

        MDAnchorLayout:
            anchor_x:"right"
            MDBoxLayout:
                orientation:'vertical'
                adaptive_size:True
                StyledIconButton:
                    icon:'weather-sunny'
                    icon_size:"115sp"
                    icon_color:app.theme_cls.accent_dark
                    _no_ripple_effect:True

    Widget:
